<div class="col s6">
    <figure class="figure">
            <%= image_tag imagen.addfoto.thumb.url, class: 'figure-img img-fluid rounded' %>

            <figcaption class="figure-caption">
            <%= imagen.descripcion %>
            <%= link_to 'Editar', edit_imagen_path(imagen) %>
            <%= link_to 'Eliminar', imagen, method: :delete, data: { confirm: 'Esta seguro que desea eliminar la imagen?'} %>
            </figcaption>
    </figure>
</div>
